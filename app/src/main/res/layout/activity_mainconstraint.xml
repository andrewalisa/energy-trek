<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <Button
        android:text="Recommended Goals"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/RecommendedGoals"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:onClick="progress (MainActivity)"
        tools:layout_editor_absoluteY="366dp"
        tools:layout_editor_absoluteX="202dp" />

    <Button
        android:text="Daily Progress"
        android:id="@+id/dailyProgress"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:onClick="goals (MainActivity)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/EnterInfo"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintRight_toLeftOf="@+id/RecommendedGoals"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="Add new data point"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:id="@+id/EnterInfo"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:onClick="enterHealthInfo (MainActivity)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.89"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.44" />

    <TextView
        android:text="Welcome to EnergyTrek! \n\nSelect a button below to explore your health."
        android:layout_width="198dp"
        android:layout_height="207dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteY="51dp"
        tools:layout_editor_absoluteX="93dp" />

</android.support.constraint.ConstraintLayout>